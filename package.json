{
  "name": "kohos",
  "version": "1.0.0",
  "description": "Brand-Creator Partnership Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run db:start",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && ./scripts/setup.sh",
    "setup:backend": "cd backend && npm install",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && ./scripts/cleanup.sh",
    "clean:backend": "cd backend && npm run clean",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "npm run format:frontend",
    "format:frontend": "cd frontend && npm run format",
    "type-check": "npm run type-check:frontend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "db:start": "cd backend && npm run db:start",
    "db:stop": "cd backend && npm run db:stop",
    "db:push": "cd backend && npm run db:push",
    "db:reset": "cd backend && npm run db:reset",
    "db:generate-types": "cd backend && npm run db:generate-types"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
} 